<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".fragment.TKFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/tungay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="2.3"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="Từ ngày..."
                android:textAlignment="center"
                android:textColor="@color/blue2"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/denngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="2.3"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="Đến ngày..."
                android:textAlignment="center"
                android:textColor="@color/blue2"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btnShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.4"
                android:background="@drawable/border_lightblue"
                android:text="Thống kê"
                android:textColor="@color/blue2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng thu"
                android:textAlignment="center"
                android:textColor="@color/blue2"
                android:textSize="25dp" />

            <TextView
                android:layout_marginBottom="30dp"
                android:id="@+id/tienThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền"
                android:textAlignment="center"
                android:textColor="@color/cam"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng chi"
                android:textAlignment="center"
                android:textColor="@color/blue2"
                android:textSize="25dp" />

            <TextView
                android:layout_marginBottom="30dp"
                android:id="@+id/tienChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền"
                android:textAlignment="center"
                android:textColor="@color/cam"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chênh lệch"
                android:textAlignment="center"
                android:textColor="@color/blue2"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tienConLai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền"
                android:textAlignment="center"
                android:textColor="@color/cam"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>